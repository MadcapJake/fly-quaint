require: quaint as q

module.exports = @->
   @filter("quaint", fn, { extension = ".q" }) where fn = (src, var opts) ->
      if not opts: opts = {=}
      if null? opts.format:
         @log("Quaint: Defaulting to HTML")
         format = .html
      else: format = opts.format
      delete opts.format
      try: q.create().translate(src, format, opts)
      catch e: throw e
